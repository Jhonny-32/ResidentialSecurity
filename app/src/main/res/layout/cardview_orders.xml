<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	app:cardCornerRadius="10dp">



	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textview_order_id"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Order #"
			android:background="@color/gray"
			android:padding="5dp"
			android:textAlignment="center"/>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_marginLeft="20sp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="20dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Fecha de pedido: " />

			<TextView
				android:id="@+id/textview_data_order"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="XXXXXXXXXXX"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_marginLeft="20sp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Nombre Residente: " />

			<TextView
				android:id="@+id/textview_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="XXXXXXXXXXX"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_marginLeft="20sp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Telefono:" />

			<TextView
				android:id="@+id/textview_phone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="XXXXX"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_marginLeft="20sp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Torre: " />

			<TextView
				android:id="@+id/textview_tower"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:text="XXX"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="100dp"
				android:text="Apartamento: " />
			<TextView
				android:id="@+id/textview_apartament"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:text="XXX"/>

		</LinearLayout>

	</LinearLayout>

</androidx.cardview.widget.CardView>