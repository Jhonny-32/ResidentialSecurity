<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.edifice.residentialsecurity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResidentialSecurity"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.client.update.ClientUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".activities.manager.ManagerHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.securityGuard.SecurityHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SaveImageActivity"
            android:exported="true" />
        <activity
            android:name=".activities.Administrator.home.AdministratorHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SelectRolesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.client.home.ClientHomeActivity"
            android:exported="true"></activity>
        <activity
            android:name=".activities.RegisterUserActivity"
            android:exported="true" />
        <activity
            android:name=".activities.RegisterResidentialActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>